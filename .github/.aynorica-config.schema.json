{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Aynorica Configuration",
  "description": "Adaptation state and prompt filtering configuration",
  "type": "object",
  "required": ["version", "adapted", "project", "prompts", "instructions"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Aynorica configuration version (semantic versioning)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0"]
    },
    "adapted": {
      "type": "string",
      "description": "ISO 8601 timestamp of last adaptation",
      "format": "date-time",
      "examples": ["2025-12-04T10:30:00Z"]
    },
    "project": {
      "type": "object",
      "required": ["type", "name", "stack"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Primary project classification",
          "enum": [
            "react-app",
            "react-library",
            "next-app",
            "nestjs-api",
            "node-api",
            "cli-tool",
            "node-library",
            "monorepo"
          ],
          "examples": ["react-library"]
        },
        "name": {
          "type": "string",
          "description": "Project name from package.json",
          "examples": ["my-component-library"]
        },
        "stack": {
          "type": "array",
          "description": "Detected technologies",
          "items": {
            "type": "string"
          },
          "examples": [["react", "typescript", "vite", "vitest"]]
        }
      }
    },
    "prompts": {
      "type": "object",
      "required": ["active", "hidden", "added"],
      "properties": {
        "active": {
          "type": "array",
          "description": "Glob patterns for prompts that should be loaded",
          "items": {
            "type": "string"
          },
          "examples": [["typescript/**", "npm/**", "git/**"]]
        },
        "hidden": {
          "type": "array",
          "description": "Glob patterns for prompts that should be filtered out",
          "items": {
            "type": "string"
          },
          "examples": [["backend/nestjs-*", "cli/*"]]
        },
        "added": {
          "type": "array",
          "description": "Custom prompts created during adaptation",
          "items": {
            "type": "string"
          },
          "examples": [["react/custom-hooks.prompt.md"]]
        }
      }
    },
    "instructions": {
      "type": "object",
      "required": ["core", "project"],
      "properties": {
        "core": {
          "type": "array",
          "description": "Core instruction files (never modified)",
          "items": {
            "type": "string"
          },
          "examples": [
            [
              "identity.instructions.md",
              "functions.instructions.md",
              "amir-profile.instructions.md"
            ]
          ]
        },
        "project": {
          "type": "array",
          "description": "Project-specific instruction files",
          "items": {
            "type": "string"
          },
          "examples": [["project/focus.instructions.md"]]
        }
      }
    },
    "research": {
      "type": "object",
      "description": "Web research results from adaptation",
      "properties": {
        "urls": {
          "type": "array",
          "description": "URLs fetched during adaptation",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "patterns": {
          "type": "array",
          "description": "Best practices extracted",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
